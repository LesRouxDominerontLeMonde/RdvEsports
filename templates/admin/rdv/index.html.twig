{% extends 'admin/admin.html.twig' %}

{% block titlte %}Tout les RDV{% endblock %}

{% block body %}
    <h1>Tout les RDV</h1>
    <form action="{{ path('admin.rdv.index') }}" method="get">
        <label for="place">Recherche par ville :</label>
        <input type="text" id="place" name="place" placeholder="Entrez une ville" value="{{ app.request.get('place') }}">
        <button type="submit">Rechercher</button>
    </form>

    <p>
        <a href="{{ path('admin.rdv.new') }}" class="btn btn-primary my-3">Créer un nouveau RDV</a>

        {% if pagination.items is empty %}
            <div class="alert alert-info">Aucun RDV trouvé</div>
        {% else %}
            <div class="alert alert-info">{{ pagination.items | length }} RDV trouvé(s)</div>
        {% endif %}
    </p>

    {% include 'partials/list.html.twig' with {'pagination': pagination} %}

{% endblock %}